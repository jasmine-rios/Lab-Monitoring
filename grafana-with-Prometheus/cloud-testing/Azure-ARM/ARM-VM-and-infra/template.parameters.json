{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"location": {
			"value":"eastus"
		},
		"networkInterfaceName": {
			"value": "grafana-NI"
		},
		"networkInterfaceNameHost1": {
            "value": "grafana-host1-NI"
        },
        "networkInterfaceNameHost2": {
            "value": "grafana-host2-NI"
        },
		"networkSecurityGroupName": {
			"value": "grafana-NSG"
		},
		"networkSecurityGroupNameHosts": {
            "value": "grafana-hosts-NSG"
        },
		"networkSecurityGroupRules": {
			"value": [
				{
					"name": "SSH",
					"properties": {
						"priority": 300,
						"protocol": "TCP",
						"access": "Allow",
						"direction": "Inbound",
						"sourceAddressPrefix": "*",
						"sourcePortRange": "*",
						"destinationAddressPrefix": "*",
						"destinationPortRange": "22",
						"description": "Allow inbound SSH traffic from anywhere."
					}
				},
				{
					"name": "grafana",
					"properties": {
						"priority": 310,
						"protocol": "TCP",
						"access": "Allow",
						"direction": "Inbound",
						"sourceAddressPrefix": "*",
						"sourcePortRange": "*",
						"destinationAddressPrefix": "*",
						"destinationPortRange": "3000",
						"description": "Allow inbound default Grafana port"
					}
				},
				{
					"name": "HTTP",
					"properties": {
						"priority": 320,
						"protocol": "TCP",
						"access": "Allow",
						"direction": "Inbound",
						"sourceAddressPrefix": "*",
						"sourcePortRange": "*",
						"destinationAddressPrefix": "*",
						"destinationPortRange": "80",
						"description": "AllowAnyHTTPInbound"
					}
				}		
			]
		},
		"networkSecurityGroupRulesHosts": {
			"value": [
			{
				"name": "Prometheus",
				"properties": {
					"priority": 310,
					"protocol": "TCP",
					"access": "Allow",
					"direction": "Inbound",
					"sourceAddressPrefix": "*",
					"sourcePortRange": "*",
					"destinationAddressPrefix": "*",
					"destinationPortRange": "9090",
					"description": "Allow inbound default Prometheus port"
				}
			},
			{
				"name": "HTTP",
				"properties": {
					"priority": 320,
					"protocol": "TCP",
					"access": "Allow",
					"direction": "Inbound",
					"sourceAddressPrefix": "*",
					"sourcePortRange": "*",
					"destinationAddressPrefix": "*",
					"destinationPortRange": "80",
					"description": "AllowAnyHTTPInbound"
				}
			}
		]
		},
		"publicIpAddressName": {
			"value": "grafana-publicIP"
		},
		"publicIpAddressType": {
			"value": "Static"
		},
		"publicIpAddressSku": {
			"value": "Standard"
		},
		"publicIpAddressNameHost1": {
			"value": "grafana-publicIP"
		},
		"publicIpAddressNameHost2": {
			"value": "grafana-publicIP"
		},
		"virtualMachineName": {
			"value": "grafana-RHEL"
		},
		"virtualMachineHost1Name": {
            "value": "grafana-host1-ubuntu"
        },
        "virtualMachineHost2Name": {
            "value": "grafana-host1-win"
        },
		"osDiskType": {
			"value": "Premium_LRS"
		},
		"virtualMachineSize": {
			"value": "Standard_B2s"
		},
		"virtualMachineSizeHosts": {
            "value": "Standard_DS1_v2"
        },
		"adminUsername": {
			"value": "azureuser"
		},
		"securityType": {
			"value": "TrustedLaunch"
		},
		"secureBoot": {
			"value": true
		},
		"vTPM": {
			"value": true
		},
		"sshPublicKey": {
			"value": "string"
		},
		"virtualNetworkName": {
			"value": "grafana-VNet"
		},
		"Subnet1": {
            "value": "grafana-subnet1"
        },
        "Subnet2": {
            "value": "grafana-subnet2"
        }
	}
}
