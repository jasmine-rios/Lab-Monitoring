{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"location": {
			"value":"eastus"
		},
		"networkInterfaceName": {
			"value": "Grafana-NI"
		},
		"networkSecurityGroupName": {
			"value": "Grafana-NSG"
		},
		"networkSecurityGroupRules": {
			"value": [
				{
					"name": "SSH",
					"properties": {
						"priority": 300,
						"protocol": "TCP",
						"access": "Allow",
						"direction": "Inbound",
						"sourceAddressPrefix": "*",
						"sourcePortRange": "*",
						"destinationAddressPrefix": "*",
						"destinationPortRange": "22",
						"description": "Allow inbound SSH traffic from anywhere."
					}
				},
				{
					"name": "Grafana",
					"properties": {
						"priority": 310,
						"protocol": "TCP",
						"access": "Allow",
						"direction": "Inbound",
						"sourceAddressPrefix": "*",
						"sourcePortRange": "*",
						"destinationAddressPrefix": "*",
						"destinationPortRange": "3000",
						"description": "Allow inbound default Grafana port"
					}
				},
				{
					"name": "HTTP",
					"properties": {
						"priority": 320,
						"protocol": "TCP",
						"access": "Allow",
						"direction": "Inbound",
						"sourceAddressPrefix": "*",
						"sourcePortRange": "*",
						"destinationAddressPrefix": "*",
						"destinationPortRange": "80",
						"description": "AllowAnyHTTPInbound"
					}
				}		
			]
		},
		"publicIpAddressName": {
			"value": "Grafana-PublicIP"
		},
		"publicIpAddressType": {
			"value": "Static"
		},
		"publicIpAddressSku": {
			"value": "Standard"
		},
		"virtualMachineName": {
			"value": "Grafana-RHEL"
		},
		"osDiskType": {
			"value": "Premium_LRS"
		},
		"virtualMachineSize": {
			"value": "Standard_B2s"
		},
		"adminUsername": {
			"value": "azureuser"
		},
		"securityType": {
			"value": "TrustedLaunch"
		},
		"secureBoot": {
			"value": true
		},
		"vTPM": {
			"value": true
		},
		"sshPublicKey": {
			"value": "string"
		},
		"virtualNetworkName": {
			"value": "Grafana-VNet"
		}
	}
}